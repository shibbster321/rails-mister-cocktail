<div class="container">
  <div class="my-2 p-2 bg-white rounded">
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <h1> <%= @cocktail.name %> </h1>
    <p class="font-light font-italic"><%= @cocktail.blurb %></p>
  </div>
  <h5>Instructions to make one</h5>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.description %> <%= dose.ingredient.name %></li>
    <% end %>
  </ul>
  <%= link_to "Edit", edit_cocktail_path, class: "btn btn-secondary" %> 
 </div>
 