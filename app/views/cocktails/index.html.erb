<div class="header">
  <h1>My website</h1>
  <p>Welcome to party town</p>
</div>

<div class="container">
  <div class="row row-cols-1 row-cols-md-2">
    <% @cocktails.each do |item| %>
    <div class="col mb-4">
      <%= link_to cocktail_path(item), class: "text-decoration-none text-dark" do %>
        <div class="card">
          <img src="mojito.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= item.blurb %></p>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>